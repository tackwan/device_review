<div class="border border-primary">
  <table class='table table-light table-hover table-inverse mt-3 h5'>
    <tr><%= image_tag user.get_profile_image(150,150) %></tr>
    <tr>
      <th>名前</th>
      <td><%= link_to user.name, user_path(user.id) %></td>
    </tr>
    <tr>
      <th>フォロー</th>
      <td>
        <%= link_to user_followings_path(user) do %>
          <i class="fas fa-user-check fa-lg px-2"></i>
          <%= user.followings.count %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>フォロワー</th>
      <td>
        <%= link_to user_followers_path(user) do %>
          <i class="fas fa-users fa-lg px-2"></i>
          <%= user.followers.count %>
         <% end %>
      </td>
    </tr>
  </table>
  <div>
    <% if user_signed_in? %>
      <% if current_user != user %>
        <td><%= render "public/relationships/btn", user: user %></td>
      <% else %>
        <%= link_to "編集する", edit_user_path(user.id), class:"btn btn-success" %>
      <% end %>
    <% end %>
  </div>
</div>