<%= render "layouts/header" %>
<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
      <h3>マイページ</h3>
      <h4>登録情報</h4><%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-success" %>
      <%= flash[:notice] %>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th><%= image_tag @user.get_profile_image(100,100), class: "img-fluid" %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <div>
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete ,class: "btn  btn-success"%>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post ,class: "btn  btn-success"%>
        <% end %>
      </div>
      <h4 class="d-inline mr-5 ">投稿一覧</h4><%= link_to "一覧を見る", reviews_path, class:"btn btn-primary ml-5" %><br>
    </div>
  </div>
</div>