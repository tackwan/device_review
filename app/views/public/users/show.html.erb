<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h1><%= @user.name %></h1>
      <h4>登録情報</h4>
      <%= flash[:notice] %>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th><%= image_tag @user.get_profile_image(100,100) %></th>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <% if current_user == @user %>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
          <% end %>
        </tr>
        <tr>
          <th>フォロー</th>
          <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
        </tr>
        <tr>
          <th>フォロワー</th>
          <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
        </tr>
      </table>
      <div>
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete ,class: "btn  btn-success"%>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post ,class: "btn  btn-success"%>
          <% end %>
        <% end %>
      </div>
      <% if @user == current_user %>
        <%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row pt-3">
    <h4 class="d-inline mr-5 ">投稿一覧</h4>
    <!--投稿があれば表示-->
    <% if @reviews.present? %>
    <table class="table table-hover table-inverse table-borderless">
      <thead>
        <tr>
          <th></th>
          <th>デバイス名</th>
          <th>メーカー</th>
          <th>カテゴリー</th>
          <th>評価</th>
          <th>コメント数</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
        <tr>
          <td><%= image_tag review.get_image(80, 80)%></td>
          <td><%= link_to review.name, review_path(review.id) %></td>
          <td><%= review.maker %></td>
          <td><%= review.category.name %></td>
          <td>
            <%= render"public/reviews/staticrate", review: review %>
          <td>
            <%= link_to "#{review.comments.count}", review_path(review.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <%= paginate @reviews %>
  </div>
</div>