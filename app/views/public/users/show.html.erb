<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
      <h3>マイページ</h3>
      <h4>登録情報<%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-success" %></h4>
      <%= flash[:notice] %>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <h4 class="d-inline mr-5 ">投稿一覧</h4><%= link_to "一覧を見る", reviews_path, class:"btn btn-primary ml-5" %><br>
      
    </div>
  </div>
</div>