<div class="container px-3">
  <div class="row mx-auto mt-5">
    <div class="col-3 mt-5">
      <h3>カテゴリー検索</h3>
      <p><%= link_to "マウス", reviews_mouse_path %></p>
      <p><%= link_to "キーボード", reviews_keyboard_path %></p>
      <p><%= link_to "マウスパッド", reviews_mousepad_path %></p>
      <p><%= link_to "ヘッドセット", reviews_headset_path %></p>
      <p><%= link_to "モニター", reviews_monitor_path %></p>
    </div>
    <div class="col-9">
      <h2>投稿一覧</h2>
      <%= render "public/searches/search" %>
      <table class="table table-hover table-inverse table-borderless">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>デバイス名</th>
            <th>メーカー</th>
            <th>カテゴリー</th>
            <th>レビュー</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td><%= link_to review.user.name, user_path(review.user.id) %></td>
            <td><%= link_to review.name, review_path(review.id) %></td>
            <td><%= review.maker %></td>
            <td><%= review.category.name %></td>
            <td>
              <div id="star-rate<%= review.id%>"> </td>
              <script>
              $('#star-rate<%= review.id %>').empty();
              $('#star-rate<%= review.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= review.star %>,
              });
              </script>
              </div>
            <td>
              <%= link_to "#{review.comments.count}", review_path(review.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @reviews %>
  </div>
</div>