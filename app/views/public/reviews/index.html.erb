<%= render "layouts/header" %>
<div class="container px-5">
  <div class="row mx-auto mt-5">
    <div class="col-11">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse table-borderless">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>デバイス名</th>
            <th>メーカー</th>
            <th>カテゴリー</th>
            <th>レビュー</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td><%= review.user.name %></td>
            <td>
              <%= link_to review_path(view.id) do %>
                <%= review.name %>
              <% end %>
            </td>
            <td><%= review.maker %></td>
            <td><%= review.category %></td>
            <td>
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @reviews %>
  </div>
</div>