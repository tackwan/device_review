<%= render "layouts/header" %>
<div class="container px-5">
  <div class="row mx-auto mt-5">
    <div class="col-11">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse table-borderless">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>デバイス名</th>
            <th>メーカー</th>
            <th>カテゴリー</th>
            <th>レビュー</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td><%= review.user.name %></td>
            <td>
              <%= link_to review_path(review.id) do %>
                <%= review.name %>
              <% end %>
            </td>
            <td><%= review.maker %></td>
            <td><%= review.category.name %></td>
            <td>
              <div id="star-rate<%= review.id%>"> </td>
              <script>
              $('#star-rate<%= review.id %>').empty();
              $('#star-rate<%= review.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= review.star %>,
              });
              </script>
              </div>
            <td>
              <%= link_to "#{post_image.post_comments.count} ", review_path(review.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @reviews %>
  </div>
</div>