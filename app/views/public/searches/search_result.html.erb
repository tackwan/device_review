<h2>検索結果</h2>
<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
     <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
    <tr>
      <th>デバイス名</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.name %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>