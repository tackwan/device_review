<div class="container px-5">
  <div class="row">
    <div class="col mx-auto">
      <h2>検索結果</h2>
      <table class="table table-hover table-inverse">
        <% if @range == "ユーザー" %>
        <thead>
          <tr>
            <th></th>
            <th>ユーザー</th>
            <th>フォロー</th>
            <th>フォロワー</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
           <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><h4><%= link_to user.name, user_path(user.id) %></h4></td>
                <td><h4><%= link_to user.followings.count, user_followings_path(user) %></h4></td>
                <td><h4><%= link_to user.followers.count, user_followers_path(user) %></h4></td>
                <td>
                  <% if current_user != user %>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete ,class: "btn  btn-success"%>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post ,class: "btn  btn-success"%>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td>
                  <%= link_to review.user.name, user_path(review.user.id) %>
                </td>
                <td>
                  <%= link_to review_path(review.id) do %>
                    <%= review.name %>
                  <% end %>
                </td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>



