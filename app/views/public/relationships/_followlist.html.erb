<% if users.exists? %>
  <% users.each do |user| %>
    <table class ="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>名前</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td>follows: <%= user.followings.count %></td>
          <td>followers: <%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>