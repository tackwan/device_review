<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>
        <%= @user.name %>さんの会員詳細
      </h3>
      <table class="table table-hover table-inverse">
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @user.is_deleted? %>
              <p>退会済み</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "編集する",edit_admin_user_path(@user.id), class:"btn btn-success" %></td>
          <td><%= link_to "注文履歴一覧を見る",admin_root_path, class:"btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>