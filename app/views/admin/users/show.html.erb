<div class="container px-5">
  <div class="row">
    <div class="col-8 px-5 pt-4 mx-auto">
      <%= flash[:notice] %>
      <h3>
        <%= @user.name %>さんの詳細
      </h3>
      <table class="table table-hover table-bordered table-inverse">
        <tr>
          <th><%= image_tag @user.get_profile_image(100,100) %></th>
        </tr>
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>フォロー</th>
          <td>
            <i class="fas fa-user-check fa-lg px-2"></i>
            <%= link_to @user.followings.count, admin_user_followings_path(@user) %>
          </td>
        </tr>
        <tr>
          <th>フォロワー</th>
          <td>
            <i class="fas fa-users fa-lg px-2"></i>
            <%= link_to @user.followers.count, admin_user_followers_path(@user) %>
          </td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @user.is_deleted? %>
              <p>退会済み</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      </table>
      <div>
        <%= link_to "編集する",edit_admin_user_path(@user.id), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>